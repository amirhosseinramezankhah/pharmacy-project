<UserControl x:Class="pharmacy_project_PL.ReminderUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pharmacy_project_PL"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="930">
    <Grid  Width="930" HorizontalAlignment="Right">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="148*"/>
            <ColumnDefinition Width="62*"/>
            <ColumnDefinition Width="27*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Image/reminder2.png" Grid.Column="3" Height="35" Width="35"/>
        <Image Source="/Image/info.png" Height="35" Width="35" />
        <TextBlock x:Name="ReminderTitleTxt" Foreground="#f0f0f0" Grid.Column="2" Text="یادآور نمونه" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="WeblogmaYekan" Margin="150,0,0,0"/>
        <TextBlock x:Name="ReminderinfoTxt"  Foreground="#f0f0f0" Grid.Column="1" Text="جزئیات یادآور" HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="WeblogmaYekan" Margin="0,0,70,0"/>
    </Grid>
</UserControl>
